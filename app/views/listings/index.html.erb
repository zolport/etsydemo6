<div class= "jumbotron">

  <h1> Hancrafted items from</h1>
   <h1>around the world.</h1>
  <h2> Discover one of kind items.</h2>
</div>

  <div class="center">
     <div class="row">
       <% @listings.each do |listing| %>
         <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
               <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price) %></p>
                 <p><%= "Sold by #{listing.user.name}" %></p>
                <% if (user_signed_in?) && (current_user == listing.user) %>
                   <%= link_to 'Edit', edit_listing_path(listing), class:"btn btn-link" %>
                   <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
                <% end %>
               </div>
             </div>
         </div>
       <%end%>
      </div> 
      
  </div>


<br>
    <% if user_signed_in? %>
    <%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
      <i class="glyphicon glyphicon-plus"></i> New Listing
    <% end %>

   <%#= link_to 'New Listing', new_listing_path, class:"btn btn-link", data: { no_turbolink: true } %>
<% end %>